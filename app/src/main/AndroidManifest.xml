<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="casper.pta_database">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pta_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminSelect" />
        <activity android:name=".AdminCreateTable" />
        <activity android:name=".AdminInsertRecord" />
        <activity
            android:name=".TeacherEdit"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".TeacherSelect" />
        <activity android:name=".StudentInformation" />
        <activity android:name=".ParentSelect" />
        <activity android:name=".ParentView"></activity>
    </application>

</manifest>